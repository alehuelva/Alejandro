{# src/Blogger/BlogBundle/Resources/views/layout.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent () }}  {#the parent() method imports the content of stylesheets of the parent template#}

    {% stylesheets
        '@BloggerBlogBundle/Resources/public/css/*'
	output='css/blogger.css'  
	filter='?yui_css'
    %}{# keep all the code file from the folder public/css in the file css/blogger.css#}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen" /> {#The asset function takes care of this by determining how #}
    {% endstylesheets %}   {#the application is being used and generating the correct paths according to the directories and subdirectories.#}
{% endblock %}


{% block sidebar %}
	{% render "BloggerBlogBundle:Page:sidebar" %}
{% endblock %}

